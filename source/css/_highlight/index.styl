.highlight
    margin: 0px
    display: block
    overflow-x: auto
    padding: 15px 20px
    font-size: font-size
    font-family: font-mono
    line-height: font-size * line-height
    table
        margin: 0
        width: auto
        td
            border: none
        td.code
            padding-right: 20px
    .gutter
        pre
            color: #666
            text-align: right
            padding-right: 20px

.highlight.plain
    .gutter
        opacity: 0

.article-entry
    .highlight
        background: #fcfcfc
        margin: 0 -20px
        .line
            height: 1.6em;

@import "_highlight/" + highlight
